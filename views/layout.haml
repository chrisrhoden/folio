!!! 5
%html
  %head
    %title= title
    %link{:rel=>'stylesheet', :type=>'text/css', :href=>'/application.css', :media=>'screen, projection'}/
  %body
    %header
      %h1=link_to Project, Environment::Config.site['title']
      %ul.navigation
        %li=link_to Project, 'projects', :class => ('active' unless current_url =~ /^tools/ )
        %li=link_to Tool, 'tools', :class => ('active' if current_url =~ /^tools/)
        - Environment::Config.site['extra_links'].each do |name, url|
          %li=link_to url, name
    -if logged_in?
      =haml :_admin_links, :layout => false
    =yield